{
  "name": "k-vite-vue-element-admin",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "postinstall": "husky install",
    "dev": "vite --host",
    "build": "vue-tsc && vite build && rm -rf ./dist",
    "preview": "vite preview --host",
    "lint": "pnpm run lint:script && pnpm run lint:style",
    "lint:script": "eslint --ext .js,.jsx,.mjs,.ts,.tsx,.vue --fix ./",
    "lint:style": "stylelint --fix --allow-empty-input **/*.{html,vue,css,less,scss}"
  },
  "lint-staged": {
    "**/*.{js,jsx.mjs,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "**/*.vue": [
      "stylelint --fix --allow-empty-input",
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "**/*.{css,less,scss}": [
      "stylelint --fix --allow-empty-input",
      "prettier --write",
      "git add"
    ],
    "**/*.{html,json,json5,jsonc}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "pinia": "^2.1.6",
    "sanitize.css": "^13.0.0",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/node": "^20.4.10",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "commitlint": "^17.7.1",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsonc": "^2.9.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vue": "^9.17.0",
    "husky": "^8.0.3",
    "jsonc-eslint-parser": "^2.3.0",
    "lint-staged": "^13.2.3",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.6",
    "sass": "^1.65.1",
    "stylelint": "^15.10.2",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recess-order": "^4.3.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "typescript": "^5.1.6",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-vue-components": "^0.25.1",
    "vite": "^4.4.9",
    "vue-tsc": "^1.8.8"
  }
}
